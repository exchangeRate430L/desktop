<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kss22.exchange.analytics.analytics"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="10">
        <Label styleClass="title" text="Transaction Statistics"/>
        <HBox alignment="CENTER" spacing="10">
            <Label text="From Date"/>
            <DatePicker fx:id="fromDatePicker"/>
            <Label text="To Date"/>
            <DatePicker fx:id="toDatePicker"/>
            <Button text="Filter" onAction="#filter"/>
        </HBox>
        <TableView fx:id="tableView">
            <columns>
                <TableColumn text="Number of Transactions" fx:id="numTransactions"
                             prefWidth="150"/>
                <TableColumn text="Total USD Amount" fx:id="totalUsdAmount"
                             prefWidth="150"/>
                <TableColumn text="Total LBP Amount" fx:id="totalLbpAmount"
                             prefWidth="150"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
