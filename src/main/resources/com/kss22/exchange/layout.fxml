<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="com.kss22.exchange.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10"
          prefHeight="475.0" prefWidth="600.0"
          vgap="10"
          stylesheets="@layout.css">

    <Label styleClass="header" text="LBP Exchange Rate"
           textAlignment="CENTER" GridPane.columnSpan="2"
           GridPane.halignment="CENTER"
    />
    <Label styleClass="value-label" text="Buy USD Rate" GridPane.columnIndex="0"
           GridPane.rowIndex="4"/>
    <Label styleClass="value" fx:id="buyUsdRateLabel" text="Buy Rate"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Label styleClass="value-label" text="Sell USD Rate" GridPane.columnIndex="1"
           GridPane.rowIndex="4"/>
    <Label styleClass="value" fx:id="sellUsdRateLabel" text="Sell Rate"
           GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Separator orientation="HORIZONTAL" GridPane.RowIndex="6"
               GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <TextField fx:id="usdTextField" text= "Lbp" GridPane.columnIndex="0" GridPane.rowIndex="8">
        <Label styleClass="value" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    </TextField>
    <TextField fx:id="lbpTextField" text= "Usd" GridPane.columnIndex="1" GridPane.rowIndex="8">
        <Label styleClass="value" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    </TextField>

    <RadioButton text="Buy USD" GridPane.columnIndex="0" GridPane.rowIndex="10">
        <toggleGroup>
            <ToggleGroup fx:id="transactionType"/>
        </toggleGroup>
    </RadioButton>
    <RadioButton text="Sell USD" toggleGroup="$transactionType" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
    <Button text="Add Transaction" GridPane.columnIndex="0" GridPane.rowIndex="14"/>

</GridPane>